<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Pagadas</a></li>
          <li class="breadcrumb-item active">Listar pagadas</li>
        </ol>
<h4>Pagadas</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tabladocumentos">
                  <thead class="thead-blue" >
                    
                  <tr>
                  <th></th>
                  <th scope="col">ID</th>
                  <th>Estatus</th>
                  <th>Nombre</th>
                  <th>Comprobante de pago</th>
                  <% unless current_user.role == "financieros" %>
                  <th>Constancia  </th>
                  <% end %>
                  <th>Acciones</th>
                  </tr>
              </thead>

              <% @payments.each do |payment|%>
 <tr>
                    <td></td>
                    <td><%= payment.id %></td>
                    <td><%= payment.status %></td>
                    <td><%= payment.nombre  %></td>
                    <td><% payment.uploads.each do |adjunto| %>
                          <p><%= adjunto.filename.to_s %></p>
                          <p><%= link_to 'Descargar', rails_blob_path(adjunto.blob, disposition: 'attachment') %></p>
                        <% end %>
                        </td>
                    <% unless current_user.role == "financieros" %>
                    <td><% payment.documento.uploads.each do |document| %>
                      <p><%= document.filename.to_s %></p>
                      <p><%= link_to 'Descargar', rails_blob_path(document.blob, disposition: 'attachment') %></p>
                    <% end %></td>
                    <%end%>
                <td>
                    <a  class="mostrar"  <%= link_to ({:action => :show, :id => payment.id}) do %><i class="bi bi-eye-fill"></i><%end%></a>
                        <a href="<%= edit_payment_path(payment)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
                        <% if current_user.role != 'direccion' %>
                        <%= link_to 'Agregar Pago', new_payment_path(payment_id: payment.id) %>
                        <%else%>
                        <%= link_to 'Documento firmado', new_certificate_path(payment_id: payment.id) %>
                        <%end%>
                    </td>
                     </tr > 
<%end %>
<script>
$(document).ready(function() {
              var oTable = $("#tabladocumentos").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              },

          responsive: "true",
          dom: 'Bfrtilp',    
                buttons:[ 
        {
          extend:    'excelHtml5',
          text:      '<i class="bi bi-file-earmark-excel"></i> ',
          titleAttr: 'Exportar a Excel',
          className: 'btn btn-success'
        },
        {
          extend:    'pdfHtml5',
          text:      '<i class="bi bi-file-earmark-pdf"></i> ',
          titleAttr: 'Exportar a PDF',
          className: 'btn btn-danger'
        },
        {
          extend:    'print',
          text:      '<i class="bi bi-printer"></i> ',
          titleAttr: 'Imprimir',
          className: 'btn btn-info'
        },
      ],
                columnDefs: [ {
            sortable: false,
            "class": "index",
            targets: 0
        } ],
        order: [[ 1, 'asc' ]],
        fixedColumns: true
        } );
 
    oTable.on( 'order.dt search.dt', function () {
        oTable.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();
            }); 

                
            </script>