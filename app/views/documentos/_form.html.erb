<%= form_with(model: documento) do |form| %>
  <% if documento.errors.any? %>
    <div style="color: blue">
    <div id="error_explanation">
    <ul>
      <% documento.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
   
  <div class="form-group row">
    <%= form.label :uploads, "Subir documento", class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= form.file_field :uploads, multiple: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "Guardar", class: "btn btn-info" %>
  </div>
<% end %>
