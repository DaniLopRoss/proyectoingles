    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
   
    </head>
    <div class="container">
      <div class="card mt-5">
      <div class="card-header">
      
      <h4 class="text">Nuevo Usuario </h4>
      </div>
       <div class="probar">
      <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div  class="form-group row">
    <%= f.label :id , "RFC:", class:'col-sm-2'  %><br />
    <div class="col-sm-8">
  <input type="text" onkeyup="mayus(this);"  <%= f.text_field :id, autofocus: true, autocomplete: "RFC", class:"form-control"  %>
  </div>
  </div>


  <div class="form-group row">
    <%= f.label :nombre, class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.text_field :nombre, autofocus: true, autocomplete: "Nombre", class:"form-control" %>
  </div>
  </div>

   <div  class="form-group row">
    <%= f.label :apellido_uno, class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.text_field :apellido_uno, autofocus: true, autocomplete: "Apellido paterno" , class:"form-control"%>
  </div>
  </div>

  <div  class="form-group row">
    <%= f.label :apellido_dos, class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.text_field :apellido_dos, autofocus: true, autocomplete: "Apellido materno", class:"form-control" %>
  </div>
  </div>

<div class="form-group row">
    <%= f.label :role, "Rol:", class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.select :role, ["administrador", "ingles", "financieros", "servicios", "direccion"], prompt: "Seleccione el rol" , class:"form-control"%>
  </div>
  </div>
  <div  class="form-group row">
    <%= f.label :email, class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control"%>
  </div>
  </div>

  <div  class="form-group row">
    <%= f.label :password, class:'col-sm-2' %>
    
    
    <div class="col-sm-8">
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control"%>
  </div>
  </div>

  <div  class="form-group row">
    <%= f.label :password_confirmation , class:'col-sm-2' %><br />
    <div class="col-sm-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse ", class: "btn btn-primary" %>
<%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
function mayus(e) {
  e.value = e.value.toUpperCase();
}
</script>
